<configs>
	<!-- *** Steel Ammo *** -->
	<append xpath="/ui_display_info/item_display">
		<item_display_info display_type="ammoBulletSteel" display_group="groupAmmo">
			<display_entry name="EntityDamage" display_type="Decimal1" title_key="statEntityDamageRanged" tags="perkGunslinger,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,admin"/>
			<display_entry name="BlockDamage" display_type="Decimal1" title_key="statBlockDamage" tags="perkGunslinger,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,admin"/>
			<display_entry name="DegradationPerUse" title_key="statDegradationPerUse" display_type="Percent" negative_preferred="true"/>
		</item_display_info>
	</append>

	<!-- *** Incendiary Ammo *** -->
	<append xpath="/ui_display_info/item_display">
		<item_display_info display_type="ammoBulletIncendiary" display_group="groupAmmo">
			<display_entry name="EntityDamage" display_type="Decimal1" title_key="statEntityDamageRanged" tags="perkGunslinger,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,admin"/>
			<display_entry name="BlockDamage" display_type="Decimal1" title_key="statBlockDamage" tags="perkGunslinger,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,admin"/>
			<display_entry name="dEntityDamageFire" title_key="statEntityDamageFire"/>
			<display_entry name="dDuration" title_key="statDuration" display_type="Time"/>
		</item_display_info>
	</append>
</configs>
