<configs>
  <!-- Toolbelt Slot Numbers -->
  <insertBefore xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']//window[@name='windowToolbelt']">
    <window name="window_toolbeltSlotNumbers" />
  </insertBefore>
  <append xpath="/xui/ruleset[@name='default']/window_group[@name='compass']">
    <window
        name="windowTargetBar"
        anchor="CenterTop"
        />
  </append>
  <!-- Water/Food Stats-->
  <set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='HUDLeftStatBars']/@name">
    CustomStatBars</set>

  <!--
  * |===========================================================================
  * | Forges
  * |===========================================================================
  -->

  <!-- Change old forge input window to the new one -->
  <set xpath="/xui/ruleset/window_group[@name='workstation_forge']/window[@name='windowForgeInput']/@name">
    windowThreeForgeInput</set>
  <set xpath="/xui/ruleset/window_group[@name='workstation_forge']/window[@name='windowOutput']/@name">
    windowThreeForgeOutput</set>

  <!--
  * |===========================================================================
  * | Bigger Backpacks
  * |===========================================================================
  -->

  <!-- *** Change Scale of UI to Fit More Slots -->
  <set xpath="/xui/ruleset[@name='default']/@scale">1.20</set>
  <set xpath="/xui/ruleset[@name='default']/@stackpanel_scale">1.00</set>

  <!--
  * |===========================================================================
  * | Working Appliances
  * |===========================================================================
  -->
  <!-- Add crafting windows for the ovens -->
  <append xpath="/xui/ruleset">
    <window_group
        name="workstation_cntWallOvenWorking"
        controller="XUiC_WorkstationWindowGroup"
        open_backpack_on_open="true"
        close_compass_on_open="true"
        >
      <window name="windowCraftingList" />
      <window name="craftingInfoPanel" />
      <window name="windowCraftingQueue" />
      <window name="windowToolsCampfire" />
      <window name="windowFuel" />
      <window name="windowOutput" />
      <window name="windowNonPagingHeader" />
    </window_group>

    <window_group
        name="workstation_cntStoveWorking"
        controller="XUiC_WorkstationWindowGroup"
        open_backpack_on_open="true"
        close_compass_on_open="true"
        >
      <window name="windowCraftingList" />
      <window name="craftingInfoPanel" />
      <window name="windowCraftingQueue" />
      <window name="windowToolsCampfire" />
      <window name="windowFuel" />
      <window name="windowOutput" />
      <window name="windowNonPagingHeader" />
    </window_group>

    <window_group
        name="workstation_cntGasGrillWorking"
        controller="XUiC_WorkstationWindowGroup"
        open_backpack_on_open="true"
        close_compass_on_open="true"
        >
      <window name="windowCraftingList" />
      <window name="craftingInfoPanel" />
      <window name="windowCraftingQueue" />
      <window name="windowToolsCampfire" />
      <window name="windowFuel" />
      <window name="windowOutput" />
      <window name="windowNonPagingHeader" />
    </window_group>

    <window_group
        name="workstation_cntCharcoalGrillWorking"
        controller="XUiC_WorkstationWindowGroup"
        open_backpack_on_open="true"
        close_compass_on_open="true"
        >
      <window name="windowCraftingList" />
      <window name="craftingInfoPanel" />
      <window name="windowCraftingQueue" />
      <window name="windowToolsCampfire" />
      <window name="windowFuel" />
      <window name="windowOutput" />
      <window name="windowNonPagingHeader" />
    </window_group>
  </append>
</configs>
